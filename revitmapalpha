cd ~/tkinter-hello-world 2>/dev/null || mkdir ~/tkinter-hello-world && cd ~/tkinter-hello-world && printf "import tkinter as tk,random\nWIDTH,HEIGHT=700,700\nROAD_W,SPACING=14,80\nMARGIN=6\nroot=tk.Tk(); root.geometry('700x700'); root.configure(bg='white'); root.title('City with Building Heights')\ncanvas=tk.Canvas(root,width=WIDTH,height=HEIGHT,bg='white',highlightthickness=0); canvas.pack()\n\ndef draw_building(x1,y1,x2,y2,level):\n    canvas.create_rectangle(x1,y1,x2,y2,fill='#e0d0b0',outline='#a08060')\n    cx=(x1+x2)/2\n    cy=y1+(y2-y1)*0.25\n    canvas.create_text(cx,cy,text=str(level),font=('Arial',9))\n\nroads_v=[x for x in range(0,WIDTH,SPACING)]\nroads_h=[y for y in range(0,HEIGHT,SPACING)]\n# roads (organic)\nfor x in roads_v:\n    for y in range(0,HEIGHT,SPACING):\n        if random.random()<0.75:\n            canvas.create_rectangle(x-ROAD_W//2,y,x+ROAD_W//2,y+SPACING,fill='#b0b0b0',outline='')\nfor y in roads_h:\n    for x in range(0,WIDTH,SPACING):\n        if random.random()<0.75:\n            canvas.create_rectangle(x,y-ROAD_W//2,x+SPACING,y+ROAD_W//2,fill='#b0b0b0',outline='')\n# choose dominant height per street row (mostly 3, some 4, fewer 5)\nrow_height={}\nfor y in range(0,HEIGHT-SPACING,SPACING):\n    r=random.random()\n    if r<0.15: row_height[y]=5\n    elif r<0.40: row_height[y]=4\n    else: row_height[y]=3\n# fill blocks with array-like buildings, labeled with levels\nfor x in range(0,WIDTH-SPACING,SPACING):\n    for y in range(0,HEIGHT-SPACING,SPACING):\n        if random.random()<0.85:\n            left=x+ROAD_W//2+MARGIN\n            right=x+SPACING-ROAD_W//2-MARGIN\n            top=y+ROAD_W//2+MARGIN\n            bottom=y+SPACING-ROAD_W//2-MARGIN\n            if left>=right or top>=bottom: continue\n            base=row_height[y]\n            # small variation around the street's dominant height\n            level=base\n            if random.random()<0.2:\n                level=max(3,min(5,base+random.choice([-1,1])))\n            if random.random()<0.5:\n                n=random.randint(1,4)\n                step=(right-left)/n\n                for i in range(n):\n                    if random.random()<0.2: continue\n                    x1=left+i*step; x2=left+(i+1)*step\n                    draw_building(x1,top,x2,bottom,level)\n            else:\n                n=random.randint(1,4)\n                step=(bottom-top)/n\n                for i in range(n):\n                    if random.random()<0.2: continue\n                    y1=top+i*step; y2=top+(i+1)*step\n                    draw_building(left,y1,right,y2,level)\nroot.mainloop()\n" > app.py && python3 app.py
